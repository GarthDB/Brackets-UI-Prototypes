#popover-container {
    display: none;
    background-color: #E0E1E3;
    position: absolute;
    z-index: 5000;
    left: 200px;
    top: 40px;
    padding: 17px;
    text-align: center;
    width: 149px;
    height: 149px;
    border-radius: 5px;
    /*border: 1px solid #A6A6A6;*/
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1), inset 0 0 0 1px #A6A6A6, inset 0 0 0 2px #EBEDEC;
}

#popover-container .cubic-bezier {
    width: 170px;
    height: 170px;
}

// popover is above element so arrow is below
#popover-container.popoverAbove:before {
    display: none;
}
#popover-container.popoverAbove:after {
    width: 24px;
    height: 14px;
    bottom: -12px;
    content: '';
    position: absolute;
    left: 50%;
    margin-left: -12px;
    background: url('../img/point.svg') no-repeat center;
    z-index: 100;
    display: block;
}

// popover is below element so arrow is above

#popover-container.popoverBelow:after {
    display: none;
}
#popover-container.popoverBelow:before {
	width: 24px;
    height: 14px;
    top: -12px;
    content: '';
    position: absolute;
    left: 50%;
    margin-left: -12px;
    background: url('../img/point.svg') no-repeat center;
    z-index: 100;
    display: block;
    -webkit-transform: rotate(180deg);
}

#popover-container .cubic-bezier-highlight {
    background-color: #DDC;
}

#popover-container * {
	margin: 0;
}

#popover-container {
	position: relative;
	margin: 1em 5% 0;
	font-family: 'Hiragino Kaku Gothic Pro', 'Segoe UI', 'Apple Gothic', Tahoma, 'Helvetica Neue', sans-serif;
	line-height: 1.4;
}
