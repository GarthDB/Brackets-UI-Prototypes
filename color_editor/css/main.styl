body
	background #EAEAEA

.coloreditor
	.saturation-luminosity-block
		width 150px
		height 150px
		position relative
		display inline-block
		margin-right 10px
		.saturation-gradient, .luminosity-gradient, .hue-block
			width 100%
			height 100%
			position absolute
			top 0
			left 0
		.saturation-gradient
			background-image -webkit-gradient(linear, left center, right center, from(rgba(255, 255, 255, 1.00)), to(rgba(255, 255, 255, 0.00)))

		.luminosity-gradient
			background-image -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0.00)), to(rgba(0, 0, 0, 1.00)))
	.hue-slider, .opacity-group
		width 12px
		height 150px
		display inline-block
		margin-right 10px
	.hue-slider
		background-image: -webkit-linear-gradient(top, #F00, #FF0, #0F0, #0FF, #00F, #F0F, #F00)
	.opacity-group
		position relative
		.opacity-background, & .opacity-slider
			width 100%
			height 100%
			position absolute
			top 0
			left 0
		.opacity-background
			background url(../img/transparent_bg.svg)
