body
	background #F8F8F8
	font-family 'SourceSans'

#status-bar
	height 20px
	border-top 1px solid #E6E6E6
	position absolute
	bottom 0
	width 100%
	-webkit-user-select none
	color #808080
	font-size 12px
	font-weight normal
	text-align right
	box-sizing: border-box
	padding 3px 20px 0
	#cursor-position
		position absolute
		height 100%
		left 15px
	#line-count, #file-type
		display inline-block
		text-align right
		margin-right 20px
	#tab-space-toggle
		display inline-block
		margin-right 4px
		width 42px
		input
			display none
		label
			cursor pointer
			display none
			&:hover
				// border-bottom 1px solid #808080
				text-decoration underline
			&.selected
				display inline
	#tab-width
		width 20px
		text-align left
		display inline-block
		label
			display inline-block
			width 100%
			&:hover
				text-decoration underline
				cursor pointer
		.hidden
			display none
		input
			height 12px
			font-size 10px
			vertical-align -2px
			border 1px solid #E6E6E6
			margin 0
			padding 0
			width 14px
			position relative
			left -1px
			top -2px
			-webkit-border-radius 2px
			border-radius 2px
			&:focus
				border 1px solid rgba(9, 64,253, 0.84)
				outline none
			&::-webkit-inner-spin-button
				-webkit-appearance: none
				margin 0
	#spinner
		width 12px
		height 12px
		background url(../img/small_spinner.svg) no-repeat
		position absolute
		right 8px
		top 4px
		display none
		&.spin
			-webkit-animation rotating 1s linear infinite
			display block

	#tab-width-input
		display none

@-webkit-keyframes rotating {
    from{
        -webkit-transform: rotate(0deg);
    }
    to{
        -webkit-transform: rotate(360deg);
    }
}