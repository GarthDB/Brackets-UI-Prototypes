body
	background #F8F8F8
	font-family 'SourceSans'

#status-bar
	height 20px
	border-top 1px solid #E6E6E6
	position absolute
	bottom 0
	width 100%
	-webkit-user-select none
	color #808080
	font-size 12px
	font-weight normal
	text-align right
	box-sizing: border-box
	padding 3px 20px 0
	#tab-space-toggle
		display inline-block
		margin-right 4px
		input
			display none
		label
			cursor pointer
			display none
			&:hover
				// border-bottom 1px solid #808080
				text-decoration underline
			&.selected
				display inline
	#tab-width
		display inline-block
		label
			margin-right 2px
		.decrement
			display inline-block
			width 6px
			height 8px
			background url('../img/stepper-arrow-sprites.svg') no-repeat 1px 0
			margin-right 2px
			cursor pointer
		.increment
			display inline-block
			width 6px
			height 8px
			background url('../img/stepper-arrow-sprites.svg') no-repeat -5px 0
			cursor pointer
	#tab-width-input
		display none