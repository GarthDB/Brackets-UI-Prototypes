html
	head
		meta(charset = 'utf-8')
		meta('http-equiv' = 'X-UA-Compatible', content = 'IE=edge,chrome=1')
		title Basic Starter
		link(rel = 'stylesheet', type = 'text/css', href = 'css/reset.css')
		link(rel='stylesheet', type='text/css', href='/Brackets-UI-Prototypes/css/fonts/SourceSans/stylesheet.css')
		link(rel = 'stylesheet', type = 'text/css', href = 'css/main.css')
		script(src = 'https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
		script(src = 'js/app.js')
		//if lt IE 9
			script(src = '//html5shiv.googlecode.com/svn/trunk/html5.js')
	body
		header
		#content
		#status-bar
			#tab-space-toggle
				input#tab-radio(type="radio", value="tab")
				label.selected(for="tab-radio") Tab Size
				input#space-radio(type="radio", value="space")
				label(for="space-radio") Spaces
			#tab-width
				label(for="tab-width") 4
				select#tab-width-input
					option(value="1") 1
					option(value="2") 2
					option(value="3") 3
					option(value="4") 4
					option(value="5") 5
					option(value="6") 6
					option(value="7") 7
					option(value="8") 8
				img(src="img/down-arrow.svg")