header-color = #899395
folder-color = #8E9A9D
filename-color = #E6E6E6
extension-color = #8E9A9D

#project_panel
	width 300px
	background #3B3F41
	font-size 13px
	text-shadow 0 1px 2px hsla(0, 0%, 0%, 0.5)
	ul
		list-style none
	li
		margin-left 14px
		a
			display block
			padding 4px 0
	header
		position relative
		font-size 14px
		color header-color
		border-bottom 1px solid hsla(0, 0%, 0%, 0.05)
		padding 16px 10px 3px
		margin-bottom 4px
		&:before
			width 100%
			height 100%
			position absolute
			content ''
			left 0
			bottom 0
			// background-color: #ffffff;
			background-image: -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0.00)),to(rgba(0, 0, 0, 0.03)));
			background-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.03));
			background-image: -moz-linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.03));
			background-image: -o-linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.03));
			background-image: -ms-linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.03));
			background-image: linear-gradient(top, rgba(0, 0, 0, 0.00), rgba(0, 0, 0, 0.03));


	.filename
		color filename-color
	.extension
		color extension-color
	.foldername
		color folder-color
		position relative
		&:before
			content ''
			border-top 7px solid #626567
			border-left 7px solid transparent
			border-right 7px solid transparent
			position absolute
			left -18px
			top 3px
			transform scale(0.6,1)
			-webkit-transform scale(0.6,1)
		// &.collapsed
			
	section.project_files > ul
		margin-left 12px
